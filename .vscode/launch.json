{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug API",
      "runtimeArgs": [
        "--require",
        "ts-node/register",
        "--require",
        "tsconfig-paths/register"
      ],
      "args": ["${workspaceFolder}/apps/api/src/main.ts"],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "sourceMaps": true,
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug API1",
      "runtimeArgs": [
        "--require",
        "ts-node/register",
        "--require",
        "tsconfig-paths/register"
      ],
      "args": ["${workspaceFolder}/apps/api1/src/main.ts"],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "sourceMaps": true,
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
